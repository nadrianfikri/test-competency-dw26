{{> head}}


<main class='container'>
  <div>
    <div class='modal-dialog'>
      <div class='modal-content'>
        <div class='modal-header'>
          <h5 class='modal-title' id='staticBackdropLabel'>Tambah kabupaten</h5>
        </div>
        <form action='/kabupaten/add' method='post' enctype="multipart/form-data">
          <div class='modal-body row'>
            <div class='mb-3'>
              <input type="file" hidden  id="file" aria-label="file upload" name="photo" onchange="handleChange()">
              <label for="file">Tambah Gambar <br> <img class="icon img-fluid" src="/static/icons/add-image.png" alt=""></label>
              <div id="preview-thumbnail" class="text-start"></div>

            </div>
            <div class='col-6 mb-3'>
              <label for='inputName' class='form-label'>Nama kabupaten</label>
              <input type='text' class='form-control' id='inputName' name='kabName' required />
            </div>
           
            <div class='col-6 mb-3'>
              <label for='inputDate' class='form-label'>Diresmikan pada</label>
              <input type='date' class='form-control' id='inputDate' name='date' required />
            </div>
            <div class='col-6 mb-3'>
              <label for='inputprov' class='form-label'>Terletak di provinsi</label>
              <select name="provinsi_id" class="form-control" id="prov" required>
                  <option selected disabled >Pilih Provinsi</option>
                  {{#each dataProv}}
                    <option value="{{this.id}}">{{this.nama}}</option>
                  {{/each}}
              </select>
            </div>
          </div>
          <div class='modal-footer'>
            <a href="/" class='btn btn-secondary'>Batal</a>
            <input type='submit' value='Tambahkan' class='btn btn-danger' />
          </div>
        </form>
      </div>
    </div>
  </div>
  



  <script>
  function handleChange() {
    const previewElement = document.getElementById("preview-thumbnail")
    const value = URL.createObjectURL(event.target.files[0])
    previewElement.innerHTML = `<img src=${value} style="width: 250px;" class="mb-3">`
  }
</script>

</main>

